@{
}
@{
    ViewData["Title"] = "Register Page";
}

<div class="calc register-form">
    <p class="register-form-title">Вход</p>
    <form class="registration-form flex-column" asp-controller="Home" asp-action="Index" method="post">
        <div class="register-form-input">
            <label class="register-form-input-login-label" for="email">Email</label>
            <input class="register-form-input-login" type="text">
            <label class="register-form-input-login-password" for="email">Password</label>
            <input class="register-form-input-password" type="text">

            <button id="Index" class="register-form-input-button" type="submit">Войти</button>
        </div>
    </form>
    <p class="register-form-registration">Регистрация</p>
</div>